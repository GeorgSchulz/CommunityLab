<configuration>

<!-- Site specific YARN configuration properties -->

  <property>
    <name>yarn.resourcemanager.webapp.address</name>
    <value>{{ groups.master1[0] }}:8088</value>
  </property>
  <property>
    <name>yarn.resourcemanager.webapp.https.address</name>
    <value>{{ groups.master1[0] }}:8090</value>
  </property>
  <property>
    <name>yarn.resourcemanager.resource-tracker.address</name>
    <value>{{ groups.master1[0] }}:8031</value>
  </property>
  <property>
    <name>yarn.resourcemanager.address</name>
    <value>{{ groups.master1[0] }}:8032</value>
  </property>
  <property>
    <name>yarn.resourcemanager.scheduler.address</name>
    <value>{{ groups.master1[0] }}:8030</value>
  </property>
  <properties>
    <name>yarn.alc.enable</name>
    <value>false</value>
  </properties>
  <properties>
    <name>yarn.admin.alc</name>
    <value>*</value>
  </properties>
  <properties>
    <name>yarn.log-aggregation-enable</name>
    <value>false</value>
  </properties>
  <properties>
    <name>yarn.resourcemanager.scheduler.class</name>
    <value>org.apache.hadoop.yarn.server.resourcemanager.scheduler.capacity.CapacityScheduler</value>
  </properties>
  <properties>
    <name>yarn.scheduler.maximum-allocation-vcores</name>
    <value>4</value>
  </properties>
  <properties>
    <name>yarn.scheduler.minimum-allocation-vcores</name>
    <value>1</value>
  </properties>
  <properties>
    <name>yarn.scheduler.maximum-allocation-mb</name>
    <value>8192</value>
  </properties>
  <properties>
    <name>yarn.scheduler.minimum-allocation-mb</name>
    <value>1024</value>
  </properties>
  <properties>
    <name>yarn.nodemanager.resource.memory-mb</name>
    <value>8192</value>
  </properties>
  <properties>
    <name>yarn.nodemanager.vmem-check-enabled</name>
    <value>false</value>
  </properties>
  <properties>
    <name>yarn.nodemanager.resource.detect-hardware-capabilities</name>
    <value>true</value>
  </properties>
  <properties>
    <name>yarn.nodemanager.vmem-pmem-ratio</name>
    <value>1.5</value>
  </properties>
  <!--properties>
    <name>yarn.nodemanager.log-dirs</name>
    <value>{{ hdfs_data_dir }}/yarn/log_dirs</value>
  </properties-->
  <properties>
    <name>yarn.nodemanager.log.retain-seconds</name>
    <value>10800</value>
  </properties>
  <properties>
    <name>yarn.nodemanager.remote-app-log-dir</name>
    <value>/tmp/logs</value>
  </properties>
  <properties>
    <name>yarn.nodemanager.remote-app-log-dir-suffix</name>
    <value>logs</value>
  </properties>
  <properties>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
  </properties>
  <properties>
    <name>yarn.log-aggregation.retain-seconds</name>
    <value>-1</value>
  </properties>
  <properties>
    <name>yarn.log-aggregation.retain-check-interval-seconds</name>
    <value>-1</value>
  </properties>
  <property>
       <name>yarn.resourcemanager.principal</name>
       <value>{{ keytab_user_yarn }}/_HOST@{{ realm }}</value>
  </property>
  <property>
       <name>yarn.resourcemanager.keytab</name>
       <value>{{ keytab_folder }}/{{ keytab_user_yarn }}.keytab</value>
  </property>
  <property>
       <name>yarn.nodemanager.principal</name>
       <value>{{ keytab_user_yarn }}/_HOST@{{ realm }}</value>
  </property>
  <property>
       <name>yarn.nodemanager.keytab</name>
       <value>{{ keytab_folder }}/{{ keytab_user_yarn }}.keytab</value>
  </property>
  <property>
       <name>yarn.nodemanager.container-executor.class</name>
       <value>org.apache.hadoop.yarn.server.nodemanager.DefaultContainerExecutor</value>
  </property>
  <property>
       <name>yarn.timeline-service.principal</name>
       <value>{{ keytab_user_yarn }}/_HOST@{{ realm }}</value>
  </property>
  <property>
       <name>yarn.timeline-service.keytab</name>
       <value>{{ keytab_folder }}/{{ keytab_user_yarn }}.keytab</value>
  </property>
  <property>
       <name>yarn.resourcemanager.webapp.delegation-token-auth-filter.enabled</name>
       <value>true</value>
  </property>
  <property>
       <name>yarn.timeline-service.http-authentication.type</name>
       <value>kerberos</value>
  </property>
  <property>
       <name>yarn.timeline-service.http-authentication.kerberos.principal</name>
       <value>{{ keytab_user_http }}/_HOST@{{ realm }}</value>
  </property>
  <property>
       <name>yarn.timeline-service.http-authentication.kerberos.keytab</name>
       <value>{{ keytab_folder }}/{{ keytab_user_http }}.keytab</value>
  </property>
  <property>
    <name>yarn.resourcemanager.webapp.spnego-keytab-file</name>
    <value>{{ keytab_folder }}/{{ keytab_user_http }}.keytab</value>
  </property>
  <property>
    <name>yarn.resourcemanager.webapp.spnego-principal</name>
    <value>{{ keytab_user_http }}/_HOST@{{ realm }}</value>
  </property>
  <property>
    <name>yarn.client.failover-max-attempts</name>
    <value>5</value>
  </property>
  <property>
       <name>yarn.nodemanager.resource.detect-hardware-capabilities</name>
       <value>true</value>
  </property>
  <property>
       <name>yarn.resourcemanager.resource-profiles.enabled</name>
       <value>true</value>
  </property>
  <property>
     <name>yarn.scheduler.capacity.root.support.user-limit-factor</name>
     <value>2</value>
     </property>
  <property>
     <name>yarn.nodemanager.disk-health-checker.min-healthy-disks</name>
     <value>0.0</value>
  </property>
  <!--property>
     <name>yarn.nodemanager.disk-health-checker.max-disk-utilization-per-disk-percentage</name>
     <value>100.0</value>
  </property-->
  <property>
     <name>yarn.nodemanager.resource.percentage-physical-cpu-limit</name>
     <value>30</value>
  </property>
  <property>
    <name>yarn.nodemanager.webapp.address</name>
    <value>0.0.0.0:8090</value>
  </property>
  <property>
    <name>yarn.nodemanager.address</name>
    <value>0.0.0.0:8042</value>
  </property>
</configuration>
